      $this->assertIdentical('settings', $ajax_commands[0]['command'], 'The first AJAX command is a settings command.');
      $this->assertIdentical('quickeditFieldFormSaved', $ajax_commands[1]['command'], 'The second AJAX command is an quickeditFieldFormSaved command.');
